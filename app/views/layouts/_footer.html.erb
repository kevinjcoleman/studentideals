<footer>
  <div class="row">
    <div class="col-md-6">
      <h4>Categories</h4>
      <ul>
        <% @nav_categories.each do |category| %>
          <li><%= link_to category.label, businesses_for_category_path(category) %></li>
        <% end %>
      </ul>
    </div>
    <div class="col-md-6">
      <h4>Top cities</h4>
      <ul>
        <% @nav_cities.each do |city| %>
          <li><%= link_to city.city, region_path(Region.where(city: city.city, state: city.state).first) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</footer>