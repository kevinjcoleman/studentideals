<!DOCTYPE html>
<html>
<head>
  <%=  metamagic site: "StudentIdeals",
                 title: [:title, :site], separator: " | ",
                 description: :description
     %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <meta name="google-site-verification" content="1pnbwbMgcD_XH2oWKigeQ5Eaf7N1UQVmC2CP9ihCbV8" />
  <script src='https://api.mapbox.com/mapbox.js/v2.4.0/mapbox.js'></script>
  <% if Rails.env.test? %>
    <script>$.support.transition = false</script>
  <% end %>
<link href='https://api.mapbox.com/mapbox.js/v2.4.0/mapbox.css' rel='stylesheet' />
  <link rel="icon" type="image/png" href="https://pbs.twimg.com/profile_images/511606964548145152/rhUOt4ui.png">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <% if Rails.env.production? %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-56842704-3', 'auto');
      ga('send', 'pageview');
    </script>
  <% end %>
</head>
<body>
  <%= render 'layouts/nav' %>
  <% unless controller.controller_name == 'sessions' || current_page?(:controller => 'pages', :action => 'home') %>
    <div class="well search-container">
      <%= react_component('Search', iframed: false) %>
    </div>
  <% end %>
<%= render 'layouts/breadcrumbs' %>
<div class="container main-container">
  <%= render 'layouts/messages' %>

  <%= yield %>
  <% unless splashed? %>
  <%= render 'layouts/splash' %>
  <% end %>
</div>
<%= render 'layouts/ad' %>
<%= render 'layouts/footer' %>
</body>
</html>
