<% meta title: "#{@category.label} in #{@state}",
   description: "IDeal #{@category.label} Discounts and Info in #{@state}." %>

<h1>IDeal <strong><%= @category.label %></strong> Discounts and Info in <strong><%= @state %></strong>.</h1>

<div class="row">
  <div class="col-md-6">
    <h2 class="text-center"><%= @category.label %> Categories</h2>
    <ul class="list">
    <% @sub_categories.each do |category| %>
      <li class="list-item"><%= link_to "#{category.label}", state_category_and_subcategory_path(@state, @category, category) %></li>
    <% end %>
    </ul>
  </div>
  <div class="col-md-6">
    <h2 class="text-center">Cities</h2>
    <ul class="list">
    <% @cities.each do |city| %>
      <li class="list-item"><%= link_to "#{city.city}", region_and_category_path(Region.where(city: city.city, state: @state).first, @category) %></li>
    <% end %>
    </ul>
  </div>
</div>
