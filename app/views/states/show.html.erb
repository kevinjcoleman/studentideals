<h1>Best deals in <%= @state %>.</h1>

<div class="row">
  <div class="col-md-6">
    <h2>Business Categories</h2>
    <ul class="list">
    <% @categories.each do |category| %>
      <li class="list-item"><%= link_to "#{category.label}", state_category_path(@state, category) %></li>
    <% end %>
    </ul>
  </div>
  <div class="col-md-6">
    <h2>Cities</h2>
    <ul class="list">
    <% @cities.each do |city| %>
      <li class="list-item"><%= link_to "#{city.city}", region_path(Region.where(city: city.city, state: @state).first) %></li>
    <% end %>
    </ul>
  </div>
</div>
