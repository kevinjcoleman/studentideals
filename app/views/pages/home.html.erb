<div class="jumbotron center homepage-container">
  <h1>Get more when you go out.</h1>
  <%= react_component('Search') %>
  <a href="https://itunes.apple.com/us/app/student-ideals/id1033926442?mt=8" style="display:inline-block;overflow:hidden;background:url(//linkmaker.itunes.apple.com/assets/shared/badges/en-us/appstore-lrg.svg) no-repeat;width:130px;height:40px;background-size:contain;padding: 1em 0;"></a>
</div>

<div class="row listing-container">
  <div class="toggle_parent col-md-6">
    <div class='toggleHolder'>
      <h3 class='toggler'>Business Categories <%= fa_icon "chevron-down" %></h3>
      <h3 class='toggler' style='display:none;'>Business Categories <%= fa_icon "chevron-up" %></h3>
    </div>
    <div class='toggled_content' style='display:none;'>
      <ul class="list center">
      <% @categories.each do |category| %>
        <li class="list-item"><%= link_to "#{category.label}", businesses_for_category_path(category) %></li>
      <% end %>
      </ul>
    </div>
  </div>

  <div class="toggle_parent col-md-6">
    <div class='toggleHolder'>
      <h3 class='toggler'>States <%= fa_icon "chevron-down" %></h3>
      <h3 class='toggler' style='display:none;'>States <%= fa_icon "chevron-up" %></h3>
    </div>
    <div class='toggled_content' style='display:none;'>
      <ul class="list center">
        <% @states.each do |state| %>
          <li class="list-item"><%= link_to "#{state.state}", state_path(state.state) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

      
    