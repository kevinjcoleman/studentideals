<div class="jumbotron center homepage-container">
  <h1>Get more when you go out.</h1>
  <%= form_tag(region_index_path, method: "get") do %>
    <div class="input-group input-group-lg homepage-search">
      <span class="input-group-addon"><%= fa_icon "map-marker", class: "home-search-icon" %></span>
      <%= autocomplete_field_tag 'region_name', '', autocomplete_region_name_region_index_path, :class => "form-control", placeholder: "Search by city/school..." %>
      <span class="input-group-btn">
        <%= submit_tag 'Search', class: "btn btn-success" %>
      </span>
    </div><!-- /input-group -->
  <% end %>
  <a class="btn btn-primary btn-lg" href="#" role="button">Sign-in</a>
  <a class="btn btn-success btn-lg" href="#" role="button">Create an account</a>
  <p><img style="padding: 1em 0;" src="https://s3-us-west-2.amazonaws.com/groupify.me/images/Download_on_the_App_Store_Badge_US-UK_135x40.svg"></p>
</div>
      
    