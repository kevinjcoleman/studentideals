<% meta title: "#{@category.label} in #{@region.name}",
   description: "IDeal discounts and info for #{@category.label} near #{@region.name}." %>

<h1>IDeal discounts and info for <strong><%= @category.label %></strong> near <strong><%= @region.name %></strong>.</h1>
<% if @sub_categories.present? %>
  <h3>Subcategories</h3>
  <% @sub_categories.each do |sub| %>
    <span><%= link_to "#{sub.label}", region_category_and_subcategory_path(@region, @category, sub) %></span>
  <% end %>
<% end %>

<%= render "businesses/businesses_list" %>
