<% meta title: @sub_category.label,
   description: "IDeal #{@sub_category.singularized_label} Discounts and Info." %>

<h1>IDeal <strong><%= @sub_category.singularized_label %></strong> Discounts and Info.</h1>

<% if @children.present? %>
  <div class="row">
    <div class="col-md-6">
      <h2 class="text-center">Subcategories</h2>
      <ul class="list">
      <% @children.each do |sub_cat| %>
        <li class="list-item"><%= link_to "#{sub_cat.label}", category_and_subcategory_path(@category, sub_cat) %></li>
      <% end %>
    </div>
    <div class="col-md-6">
      <h2 class="text-center">States</h2>
      <ul class="list">
      <% @states.each do |state| %>
        <li class="list-item"><%= link_to "#{state.state}", state_category_and_subcategory_path(state.state, @category, @sub_category) %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% else %>
  <h2 class="text-center">Choose a state</h2>
  <ul class="list">
  <% @states.each do |state| %>
    <li class="list-item"><%= link_to "#{state.state}", state_category_and_subcategory_path(state.state, @category, @sub_category) %></li>
  <% end %>
  </ul>
<% end %>
