<% meta title: "#{@sub_category.label} in #{@region.name}",
   description: "IDeal #{@sub_category.singularized_label} discounts and info near #{@region.name}." %>

<h1>IDeal <strong><%= @sub_category.singularized_label %></strong> discounts and info near <strong><%= @region.name %></strong>.</h1>
<% if @sub_categories.present? %>
<h3>Subcategories</h3>
  <% @sub_categories.each do |sub| %>
    <span><%= link_to "#{sub.label}", region_category_and_subcategory_path(@region, @category, sub) %></span>
  <% end %>
<% end %>

<%= render "businesses/businesses_list" %>
