<% meta title: "#{@sub_category.label} in #{@region.name}",
   description: "IDeal discounts and info for #{@sub_category.singularized_label} near #{@region.name}." %>

<h1>IDeal discounts and info for <strong><%= @sub_category.singularized_label %></strong> near <strong><%= @region.name %></strong>.</h1>
<% if @sub_categories.present? %>
<h3>Subcategories</h3>
  <% @sub_categories.each do |sub| %>
    <span><%= link_to "#{sub.label}", region_category_and_subcategory_path(@region, @category, sub) %></span>
  <% end %>
<% end %>

<%= render "businesses/businesses_list" %>
