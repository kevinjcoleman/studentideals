<h1><%= @category.label %></h1>

<div class="row">
  <div class="col-md-6">
    <h2><%= @category.label %> Categories</h2>
    <ul class="list">
    <% @sub_categories.limit(5).each do |sub_cat| %>
      <li class="list-item"><%= link_to "#{sub_cat.label}", businesses_for_category_and_subcategory_path(@category, sub_cat) %></li>
    <% end %>
    <% if @sub_categories.offset(5).present? %>
      <div class="toggle_parent">
        <div class='toggleHolder' style="text-align:right">
          <h4 class='toggler'>Show more <%= fa_icon "chevron-down" %></h4>
          <h4 class='toggler' style='display:none;'>Close <%= fa_icon "chevron-up" %></h4>
        </div>
        <div class='toggled_content' style='display:none;'>
          <ul class="list" >
            <% @sub_categories.offset(5).each do |sub_cat| %>
              <li class="list-item"><%= link_to "#{sub_cat.label}", businesses_for_category_and_subcategory_path(@category, sub_cat) %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-6">
    <h2>States</h2>
    <ul class="list">
    <% @states.each do |state| %>
      <li class="list-item"><%= link_to "#{state.state}", state_category_path(state.state, @category) %></li>
    <% end %>
    </ul>
  </div>
</div>